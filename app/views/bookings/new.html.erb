<h1>Book Flight</h1>
<h2>
  <%= @booking.flight.to_airport.code %> ->
  <%= @booking.flight.from_airport.code %>
</h2>
<h4>
  <%= @booking.flight.datetime.to_formatted_s(:long) %>
</h4>
<div class="row">
  <h3>Enter Passenger Info:</h3>
  <%= form_for @booking do |f| %>
    <ol>
      <%= f.fields_for :passengers do |passenger_form| %>
        <li>
          <div class="form-group">
            <%= passenger_form.label :name %>
            <%= passenger_form.text_field :name,
            class:"form-control", placeholder:"Enter full name..." %>
          </div>
          <div class="form-group">
            <%= passenger_form.label :email %>
            <%= passenger_form.text_field :email,
            class:"form-control", placeholder:"Enter email..." %>
          </div>
        </li>
      <% end %>
    </ol>
    <%= f.submit class:"btn btn-default" %>
  <% end %>
</div>
